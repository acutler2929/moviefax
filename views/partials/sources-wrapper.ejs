<div class="sources-wrapper">
	<h4 class="text-center">Buy</h4>
	<ul class="source-ul">
		<% movieDataState.movieSources.purchaseSources.forEach((source) => { %>
		<li class="source-li">
			<a href="<%= source.web_url %>"
				><%= source.name || source.source_name %> from <%= source.price %></a
			>
			</li>
		<% }) %>
		</ul>
</div>
